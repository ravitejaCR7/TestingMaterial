<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigationDrawer">


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.talarir.testingmaterial.MainActivity">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/app_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:text="Hello World!" />
    </RelativeLayout>

    <fragment
        android:id="@+id/nav_fragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        app:layout="@layout/fragment_navigation_fragmant"
        android:name="com.example.talarir.testingmaterial.NavigationFragmant"
        tools:layout="@layout/fragment_navigation_fragmant"
        android:layout_gravity="start"/>


</android.support.v4.widget.DrawerLayout>
